#!/bin/bash

## adding public key for connection ##

# key for RHEL distro path
echo "ssh-rsa  ec2-user@ip-172-31-45-203.eu-central-1.compute.internal" >> /home/ec2-user/.ssh/authorized_keys

# key for Ubuntu distro path
echo "ssh-rsa  ec2-user@ip-172-31-45-203.eu-central-1.compute.internal" >> /home/ubuntu/.ssh/authorized_keys